{% if msg %}
  <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
    <strong>{{msg}}</strong>
  </div>

{% endif %}
<form action="/admin/user/edit/{{user.id}}" method="post" id='user_edit_form' onsubmit="return postUserInfo();">
    {% csrf_token %}
    {{ form.as_p }}
     <button  class="btn btn-primary"  >
           提交
    </button>
</form>